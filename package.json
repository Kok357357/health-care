    "concurrently": "^7.0.0",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.15",
    "process": "^0.11.10"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-native": "^0.66.3"
  }
